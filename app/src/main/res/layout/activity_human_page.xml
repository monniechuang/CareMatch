<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/human_image"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/human_name"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="ANDREW"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/human_age"
                            android:layout_width="20dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="34"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="5dp"
                            android:text="歲 "
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/human_sex"
                            android:layout_width="20dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="男"
                            android:textSize="12sp" />
                    </LinearLayout>>

                    <TextView
                        android:id="@+id/human_ava"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="可預約" />

                    <TextView
                        android:id="@+id/human_time"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="時段" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="所在城市"
                        android:textColor="@color/colorblack"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/human_city"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Tainan" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="最高學歷"
                        android:textColor="@color/colorblack"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/human_educate"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="大學" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="看護費用(以12小時為單位)"
                        android:textColor="@color/colorblack"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/human_price"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="1000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="過去的經驗"
                        android:textColor="@color/colorblack"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/human_exp"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text="" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/book_care"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我要預約"
                android:background="@drawable/white_border"
                />

            <Button
                android:id="@+id/add_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我要寫評論" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/review_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/human_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>