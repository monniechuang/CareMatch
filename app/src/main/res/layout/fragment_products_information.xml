<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductsInformationFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/products_name"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="商品名稱"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/colorblack"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary" />


            <ImageView
                android:id="@+id/products_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/white_border" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout2"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:id="@+id/Store_Button"
                    android:padding="8dp"
                    android:tint="@color/colorPrimary"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/img_store"
                    android:scaleType="centerCrop" />



                <TextView
                    android:id="@+id/products_storename"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/Store_Button"
                    android:layout_toEndOf="@+id/Store_Button"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/Store_Button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text=""/>




            </RelativeLayout>



            <!--<TextView-->
                <!---->
                <!--android:id="@+id/products_storename"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_margin="10dp"-->
                <!--android:textSize="20dp"-->
                <!--android:textColor="@color/colorPrimaryDark"-->
                <!--android:text=""/>-->




            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:text="產品特色"
                    android:textColor="@color/colorblack"
                    android:textSize="25dp" />

                <!--<ImageButton-->
                    <!--android:id="@+id/Store_Button"-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:background="@drawable/img_store"-->
                    <!--android:scaleType="centerCrop" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/products_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/colorblack"
                android:text="商品資訊" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>