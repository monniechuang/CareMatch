                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:background="@drawable/white_border"-->
                    <!--/>-->



            <!--</RelativeLayout>-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>
