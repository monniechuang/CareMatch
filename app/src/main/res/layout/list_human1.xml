<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




                <ImageView
                    android:id="@+id/h_image"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_blueword"
                    android:tint="@color/white" />





            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h_image"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/ava"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:src="@drawable/ava"
                    android:tint="@color/colorPrimary"
                    />

                <TextView
                    android:id="@+id/h_ava"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="可預約"

                    android:layout_toRightOf="@+id/ava"
                    android:layout_toEndOf="@+id/ava"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/ava"/>

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/fav_button"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_toRightOf="@+id/h_ava"
                    android:layout_toEndOf="@+id/h_ava"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/h_ava"
                    app:srcCompat="@drawable/empty_heart" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/care"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:src="@drawable/sex"
                    android:tint="@color/colorPrimary"
                    />

                <TextView
                    android:id="@+id/h_name"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="看護  "
                    android:layout_toRightOf="@+id/care"
                    android:layout_toEndOf="@+id/care"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/care"/>

                <TextView
                    android:id="@+id/h_age"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="30"
                    android:layout_toRightOf="@+id/h_name"
                    android:layout_toEndOf="@+id/h_name"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/h_name"/>

                <TextView
                    android:id="@+id/age"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="歲 "
                    android:layout_toRightOf="@+id/h_age"
                    android:layout_toEndOf="@+id/h_age"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/h_name"/>

                <TextView
                    android:id="@+id/h_sex"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="男"
                    android:layout_toRightOf="@+id/age"
                    android:layout_toEndOf="@+id/age"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/h_name"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout0"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/time"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:src="@drawable/booking_starttime"
                    android:tint="@color/colorPrimary"
                    />

                <TextView
                    android:id="@+id/h_time"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="早班  "
                    android:layout_toRightOf="@+id/time"
                    android:layout_toEndOf="@+id/time"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/time"/>

                <TextView
                    android:id="@+id/h_city"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="台北"
                    android:layout_toRightOf="@+id/h_time"
                    android:layout_toEndOf="@+id/h_time"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/h_time"/>




            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/salary"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:src="@drawable/salary"
                    android:tint="@color/colorPrimary"
                    />

                <TextView
                    android:id="@+id/h_price"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="350  "
                    android:layout_toRightOf="@+id/salary"
                    android:layout_toEndOf="@+id/salary"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/salary"/>

                <TextView
                    android:id="@+id/price"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="/小時  "
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/h_price"
                    android:layout_toEndOf="@+id/h_price"
                    android:layout_alignBottom="@+id/h_price"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout2"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/exp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:src="@drawable/happysearch"
                    android:tint="@color/colorPrimary"
                    />

                <TextView
                    android:id="@+id/h_exp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="看護經驗  "
                    android:layout_toRightOf="@+id/exp"
                    android:layout_toEndOf="@+id/exp"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/exp"/>




            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout4"

                >



            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
